apiVersion: v1
kind: Service
metadata:
  name: ${DB_CLUSTER}-db-svc
  namespace: ${NS}
  annotations:
    metallb.io/address-pool: sdf-rubin-ingest
    metallb.io/ip-allocated-from-pool: sdf-rubin-ingest
spec:
  allocateLoadBalancerNodePorts: false
  ports:
  - name: pgbouncer
    port: 5432
    protocol: TCP
    targetPort: 5432
  selector:
    cnpg.io/cluster: ${DB_CLUSTER}
    cnpg.io/instanceRole: primary
  type: LoadBalancer

---

